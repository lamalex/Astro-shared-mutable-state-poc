---
import FootnotePageLayout from '../components/FootnotePageLayout.astro';
import { FootnoteManager } from '../lib/footnote-manager';
import { ContentUtils } from '../lib/content-utils';

// Setup page content with custom article order
const { articles } = await ContentUtils.createArticlePage({
  articleOrder: ['advanced-techniques', 'building-components', 'getting-started']
});

// Create footnote manager (no deferred footnotes on this page)
const { registry, renderedContent } = await FootnoteManager.createForPage({
  content: articles
});
---

<FootnotePageLayout
  registry={registry}
  articles={renderedContent}
  title="Advanced Astro Techniques"
  theme="red"
>
  <Fragment slot="header">
    <p class="subtitle">
      Same articles, different order - demonstrating reusable content collections.
      Notice how footnote numbering changes based on the new order!
    </p>
  </Fragment>
  
  <Fragment slot="navigation">
    <a href="/">‚Üê Back to Main Page</a>
  </Fragment>
</FootnotePageLayout>
